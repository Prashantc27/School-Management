<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Student Information</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      header {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      table,
      th,
      td {
        border: 1px solid #ddd;
      }

      th,
      td {
        padding: 10px;
        text-align: center;
      }

      th {
        background-color: #333;
        color: #fff;
      }

      td input {
        width: 100%;
        padding: 5px;
        border: 1px solid #ddd;
      }

      td input[readonly] {
        background-color: #f4f4f4;
      }

      td button {
        width: 100%;
        padding: 5px;
        background-color: #333;
        color: #fff;
        cursor: pointer;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      tr:nth-child(odd) {
        background-color: #ffffff;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Student Information</h1>
    </header>

    <div id="student-entry">
      <h2>Add Student</h2>
      <form
        id="student-entry-form"
        method="POST"
        action="/students"
        enctype="application/x-www-form-urlencoded"
      >
        <table>
          <thead>
            <tr>
              <th>Roll Number</th>
              <th>Student Name</th>
              <th>Age</th>
            </tr>
          </thead>
          <tbody id="student-entry-table">
            <tr>
              <td>
                <input type="Number" name="RollNo" placeholder="RollNo" />
              </td>
              <td>
                <input type="text" name="Name" placeholder="Student Name" />
              </td>
              <td>
                <input type="number" name="Age" placeholder="Age" />
              </td>
            </tr>
          </tbody>
        </table>
        <button type="submit">Save</button>
      </form>
    </div>

    <div id="student-display">
      <h2>Student Information</h2>
      <table>
        <thead>
          <tr>
            <th>Roll Number</th>
            <th>Student Name</th>
            <th>Age</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach((student) => { %>
          <tr>
            <td><%= student.RollNo %></td>
            <td><%= student.Name %></td>
            <td><%= student.Age %></td>
            <td>
              <form
                method="POST"
                action="/students/<%= student.id %>?_method=DELETE"
              >
                <input type="hidden" name="_method" value="DELETE" />
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
